<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#006699">

    <EditText
        android:id="@+id/abc"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:gravity="right|center"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/CLEAR"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="AC"
            android:textSize="25dp"
            android:layout_marginLeft="3.5dp"
            android:onClick="expressionac"
            />
        <Button
            android:id="@+id/plusminus"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="C"
            android:textSize="25dp"
            android:onClick="expressionpm"
            />
        <Button
            android:id="@+id/PPPP"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="%"
            android:textSize="25dp"
            android:onClick="expressionm"
            />
        <Button
            android:id="@+id/DDDD"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="/"
            android:textSize="25dp"
            android:onClick="expressiond"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/SSS"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="7"
            android:textSize="25dp"
            android:layout_marginLeft="3.5dp"
            android:onClick="expression7"
            />
        <Button
            android:id="@+id/eee"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="8"
            android:textSize="25dp"
            android:onClick="expression8"
            />
        <Button
            android:id="@+id/nnn"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="9"
            android:textSize="25dp"
            android:onClick="expression9"
            />
        <Button
            android:id="@+id/MMMM"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="*"
            android:textSize="25dp"
            android:onClick="expressionp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/fff"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="4"
            android:textSize="25dp"
            android:layout_marginLeft="3.5dp"
            android:onClick="expression4"
            />
        <Button
            android:id="@+id/FFF"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="5"
            android:textSize="25dp"
            android:onClick="expression5"
            />
        <Button
            android:id="@+id/sss"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="6"
            android:textSize="25dp"
            android:onClick="expression6"
            />
        <Button
            android:id="@+id/SSSS"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="-"
            android:textSize="25dp"
            android:onClick="expressionss"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/ooo"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="1"
            android:textSize="25dp"
            android:layout_marginLeft="3.5dp"
            android:onClick="expression1"
            />
        <Button
            android:id="@+id/ttt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="2"
            android:textSize="25dp"
            android:onClick="expression2"
            />
        <Button
            android:id="@+id/TTT"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="3"
            android:textSize="25dp"
            android:onClick="expression3"
            />
        <Button
            android:id="@+id/AAAA"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="+"
            android:textSize="25dp"
            android:onClick="expressiona"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/zzz"
            android:layout_width="175dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="25dp"
            android:layout_marginLeft="3.5dp"
            android:onClick="expression0"
            />
        <Button
            android:id="@+id/DOT"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="."
            android:textSize="25dp"
            android:onClick="expressiondot"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="="
            android:textSize="25dp"
            android:onClick="solve"
            />

    </LinearLayout>
</LinearLayout>